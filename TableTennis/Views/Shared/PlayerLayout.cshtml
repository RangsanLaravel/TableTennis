<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
   

</head>

<body style="padding-bottom:0;">

    <div class="container">
        @RenderBody()
        <br />
        <br />
        <hr />
        <br />
        <footer>
            @Html.Partial("_Footer")
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <link href="~/Content/datepicker/bootstrap-datepicker.css" rel="stylesheet" />
    <link href="~/Content/datepicker/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="~/Content/datepicker/bootstrap-datepicker.css" rel="stylesheet" />

    <script src="~/Content/datepicker/bootstrap-datepicker.min.js"></script>
    <script src="~/Content/datepicker/bootstrap-datepicker-thai.js"></script>
    <script src="~/Content/datepicker/locales/bootstrap-datepicker.th.js"></script>

    @RenderSection("scripts", required: false)
    @Html.Partial("~/Views/Shared/_Loading.cshtml")

    <script src="~/Scripts/system/Common.js"></script>
</body>
</html>

